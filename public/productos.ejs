<!-- public/productos.ejs -->
<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Lista de Productos</title>
    <style>
        /* Estilos similares al anterior */
        body {
            font-family: Arial, sans-serif;
            background-color: #FFF5E1;
            color: #4A4A4A;
            margin: 0;
            padding: 20px;
            display: flex;
            justify-content: center;
            align-items: center;
            flex-direction: column;
            min-height: 100vh;
        }

        .container {
            max-width: 800px;
            width: 100%;
            background-color: #FFFFFF;
            padding: 20px;
            border-radius: 10px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        }

        h1 {
            text-align: center;
            color: #D2691E;
        }

        table {
            width: 100%;
            border-collapse: collapse;
            margin-top: 20px;
        }

        th, td {
            padding: 12px;
            text-align: left;
            cursor: pointer;
        }

        th {
            background-color: #FFA07A;
            color: #FFFFFF;
            border-bottom: 2px solid #FF7F50;
        }

        td {
            border-bottom: 1px solid #F4A460;
        }

        tr:hover {
            background-color: #FFE4C4;
        }

        .no-products {
            text-align: center;
            color: #A0522D;
            padding: 20px 0;
        }
    </style>
</head>
<body>
    <div class="container">
        <h1>Lista de Productos</h1>
        <table>
            <thead>
                <tr>
                    <th>Nombre</th>
                    <th>Descripción</th>
                    <th>Precio</th>
                    <th>Stock</th>
                </tr>
            </thead>
            <tbody>
                <% if (productos.length > 0) { %>
                    <% productos.forEach(producto => { %>
                        <tr class="producto-fila" data-id="<%= producto._id %>">
                            <td><%= producto.Nombre %></td>
                            <td><%= producto.Descripcion %></td>
                            <td>$<%= producto.Precio.toFixed(2) %></td>
                            <td><%= producto.Stock %></td>
                        </tr>
                    <% }) %>
                <% } else { %>
                    <tr>
                        <td colspan="4" class="no-products">No hay productos disponibles</td>
                    </tr>
                <% } %>
            </tbody>
        </table>
    </div>

    <script>
        // Obtener todas las filas de productos
        const filasProductos = document.querySelectorAll('.producto-fila');

        // Añadir evento de clic a cada fila
        filasProductos.forEach(fila => {
            fila.addEventListener('click', () => {
                // Obtener el ID del producto
                const id = fila.getAttribute('data-id');

                // Redirigir a la ruta de detalles del producto
                window.location.href = `/producto/${id}`;
            });
        });
    </script>
</body>
</html>
